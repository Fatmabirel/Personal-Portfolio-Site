@model List<Blog>
@{
    ViewData["Title"] = "BlogList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Blog Yazıları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Blog Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Blog yazıları ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Kategori</th>
									<th scope="col">Detay</th>
									<th scope="col">Blog Url</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Category</td>
										<td>@(item.Detail.Length > 100 ? item.Detail.Substring(0, 100) + "..." : item.Detail)</td>
										<td><a href="@item.BlogUrl" target="_blank">@item.BlogUrl</a></td>
										<td>@item.Date</td>
										<td><a href="/Blog/DeleteBlog/@item.Id" class="btn btn-danger">Sil</a></td>
										<td><a href="/Blog/UpdateBlog/@item.Id" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Blog/CreateBlog/" class="btn btn-primary">Yeni Blog Yazısı Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


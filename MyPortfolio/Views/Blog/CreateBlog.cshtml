@model Blog
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Blog Yazıları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Blog Yazısı Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Blog Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Blog Kategori</label>
							<input type="text" asp-for="Category" class="form-control" />
							<br />
							<label>Blog Linki</label>
							<input type="text" asp-for="BlogUrl" class="form-control" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>Blog Detayı</label>
							<textarea rows="8" class="form-control" asp-for="Detail"></textarea>
							<br />
							<button class="btn btn-primary">Blog Yazısını Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

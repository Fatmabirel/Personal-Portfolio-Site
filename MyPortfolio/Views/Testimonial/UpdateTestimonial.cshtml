@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar Bilgisi</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <label>Referans Ad Soyadı</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Referans Mesleği</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Referans Fotoğrafı</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Referans İçeriği</label>
                            <textarea rows="8" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-warning">Referansı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Bilgisi</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Referans Ad Soyadı</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Referans Mesleği</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Referans Fotoğrafı</label>
							<input type="file" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Referans İçeriği</label>
							<textarea rows="8" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Referans Yazısını Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



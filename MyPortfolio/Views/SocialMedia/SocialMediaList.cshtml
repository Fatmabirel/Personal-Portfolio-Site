@model List<SocialMedia>

@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr style="text-align: center; ">
                                    <th scope="col">#</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr style="text-align: center; ">
                                        <td>@count</td>
                                        <td style="text-align: center;">
                                            <i class="@item.Icon" style="font-size: 24px;"></i>
                                        </td>
                                        <td>@item.Title</td>
                                        <td>
                                            <a href="@item.Url" target="_blank">@item.Url</a>
                                        </td>
                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.Id" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Bilgisi Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


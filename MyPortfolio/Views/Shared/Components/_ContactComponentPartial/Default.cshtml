@model List<MyPortfolio.DAL.Entities.Contact>
<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>Bana Ulaşın</h1>
            <p class="lead">Her türlü soru, öneri veya işbirliği talebi için benimle iletişime geçmekten çekinmeyin. Aşağıdaki iletişim kanalları aracılığıyla sizinle hızlı ve etkili bir şekilde iletişim kurabilirim. Geri dönüşleriniz benim için değerlidir ve en kısa sürede yanıt vermek için buradayım. Herhangi bir konuda yardım veya bilgi almak istiyorsanız, lütfen iletişim formunu doldurun veya doğrudan e-posta gönderin.</p>
        </div>
    </div>
    @foreach(var item in Model)
    {

        <div class="row contact__main">
            <div class="col-eight tab-full contact__form">
                <form name="contactForm" id="contactForm" method="post" action="">
                    <fieldset>

                        <div class="form-field">
                            <input name="contactName" type="text" id="contactName" placeholder="Ad" value="" minlength="2" required="" aria-required="true" class="full-width">
                        </div>
                        <div class="form-field">
                            <input name="contactEmail" type="email" id="contactEmail" placeholder="Soyad" value="" required="" aria-required="true" class="full-width">
                        </div>
                        <div class="form-field">
                            <input name="contactSubject" type="text" id="contactSubject" placeholder="Konu" value="" class="full-width">
                        </div>
                        <div class="form-field">
                            <textarea name="contactMessage" id="contactMessage" placeholder="Mesaj" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
                        </div>
                        <div class="form-field">
                            <button class="full-width btn--primary">Gönder</button>
                            <div class="submit-loader">
                                <div class="text-loader">Gönderiliyor...</div>
                                <div class="s-loader">
                                    <div class="bounce1"></div>
                                    <div class="bounce2"></div>
                                    <div class="bounce3"></div>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </form>

                <!-- contact-warning -->
                <div class="message-warning">
                    Bir şeyler yanlış gitti. Lütfen tekrar deneyin.
                </div>

                <!-- contact-success -->
                <div class="message-success">
                    Mesajınız gönderildi, teşekkür ederiz!<br>
                </div>

            </div>
            <div class="col-four tab-full contact__infos">
                <h4 class="h06">Telefon</h4>
                <p>
                    Telefon: @item.Phone1<br>
                </p>

                <h4 class="h06">Email</h4>
                <p>
                    @item.Email1<br>
                </p>

                <h4 class="h06">Adres</h4>
                <p> @item.Address
                </p>
            </div>

        </div>
    }

</section>